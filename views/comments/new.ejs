<% include ../partials/header %>
<div class="container">
  <div class="row">
          <h1 style="text-align:center"> Add a New comment to <%=blog.name%> </h1>
  <div style="width:30%;margin:25px auto ">

    <form action="/techblog/<%= blog._id %>/comment" method="POST">

      <div class="form-group">
               <textarea name="comment[text]" class="form-control" placeholder="text" required  rows="8" cols="80"></textarea>
      </div>


      <div class="form-group">
               <button class=" btn btn-lg btn-default btn-primary btn-block"> Submit</button>
      </div>

    </form>
      <a href="/techblog"> Go Back</a>
</div>

</div>
</div>
