<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align:center">Create a New Tech Blog</h1>
  <div style="width:30%;margin:25px auto ">

    <form action="/techblog" method="POST">
      <div class="form-group">
               <input class="form-control" type="text" name="name" placeholder="name" required>
      </div>
      <div class="form-group">
               <input class="form-control" type="text" name="image" placeholder="image url" required>
      </div>
      <div class="form-group">
               <textarea class="form-control"  name="description" placeholder="description" rows="8" cols="60" required></textarea>
      </div>
      <div class="form-group">
               <button class=" btn btn-lg btn-default btn-primary btn-block" required> Submit</button>
      </div>

    </form>
      <a href="/techblog"> Go Back</a>
</div>

</div>
</div>
